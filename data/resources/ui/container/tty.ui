<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PdsContainerTty" parent="GtkWidget">

    <child>
      <object class="GtkStack" id="stack">

        <child>
          <object class="GtkStackPage">
            <property name="name">not-running</property>

            <property name="child">
              <object class="AdwStatusPage">
                <property name="icon-name">utilities-terminal-symbolic</property>
                <property name="title" translatable="yes">No Terminal</property>
                <property name="description" translatable="yes">The container must be running to use the terminal.</property>

                <child>
                  <object class="GtkButton">
                    <style>
                      <class name="pill"/>
                      <class name="suggested-action"/>
                    </style>
                    <property name="action-name">container-tty.start-or-resume</property>
                    <property name="halign">center</property>
                    <property name="label">Start</property>
                    <property name="width-request">200</property>
                  </object>
                </child>

              </object>
            </property>

          </object>
        </child>

        <child>
          <object class="GtkStackPage">
            <property name="name">running</property>

            <property name="child">
              <object class="VteTerminal" id="terminal">
                <property name="vexpand">True</property>
              </object>
            </property>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
